}

body {
  font-family: Helvetica;
  box-sizing: border-box;
  background: #f6f7fb;
}

header {
  height: 50vh;
  padding: 1.2rem;
}

.header__logo-box {
  height: 8rem;
}

.header__logo {
  height: 3rem;
}

.header__text-box {
  height: 13.8rem;
  background-image: linear-gradient(to right bottom, #334680df, #1e87ff49), url(hero.HASH_REF_31e6d151e994f66ed233392785881c35.jpg);
  background-size: cover;
  background-position: top;
  background-repeat: no-repeat;
