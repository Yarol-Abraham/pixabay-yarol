*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

html {
  font-size: 62.5%;
}

body {
  font-family: Helvetica;
  box-sizing: border-box;
  background: #f6f7fb;
}

.btn {
  border: none;
  border-radius: 0.8rem;
  cursor: pointer;
  transition: all 450ms ease-out;
}

header {
  height: 50vh;
  padding: 1.2rem;
}

.header__logo-box {
  height: 8rem;
}

.header__logo {
  height: 3rem;
}

.header__text-box {
  height: 13.8rem;
  background-image: linear-gradient(to right bottom, #334680df, #1e87ff49), url(b5cbb1b07c414903094e5dfbfe26e40a);
  background-size: cover;
  background-position: top;
  background-repeat: no-repeat;
  border-radius: 0.8rem;
  display: flex;
  justify-content: center;
  align-items: center;
}

.header-primary {
  color: #f6f7fb;
}

.search {
  width: 30rem;
  height: 5rem;
  display: flex;
}

.search input {
  padding: 1rem;
  outline: none;
  border: none;
  border-radius: 0.8rem;
  width: 80%;
}

.search button {
  width: 20%;
  padding: 1rem;
  background: #1e86ff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search button:hover {
  background: #83bdff;
}