*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

html {
  font-size: 62.5%;
}

body {
  font-family: Helvetica;
  letter-spacing: 0.2rem;
  box-sizing: border-box;
  background: #f6f7fb;
}

img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: 650ms all ease-in-out;
}

a {
  text-decoration: none;
}

.btn {
  border: none;
  border-radius: 0.8rem;
  cursor: pointer;
  transition: all 450ms ease-out;
}

header {
  height: 50vh;
  padding: 1.2rem;
}

.header__logo-box {
  height: 8rem;
}

.header__logo {
  height: 3rem;
  width: 16rem;
}

.header__text-box {
  height: 13.8rem;
  background-image: linear-gradient(to right bottom, #334680df, #1e87ff49), url(hero.HASH_REF_31e6d151e994f66ed233392785881c35.jpg);
  background-size: cover;
  background-position: top;
  background-repeat: no-repeat;
  border-radius: 0.8rem;
  display: flex;
  justify-content: center;
  align-items: center;
}

.header-primary {
  color: #f6f7fb;
}

.search {
  width: 30rem;
  height: 5rem;
  display: flex;
}

.search input {
  padding: 1rem;
  outline: none;
  border: none;
  border-radius: 0.8rem;
  width: 80%;
}

.search button {
  width: 20%;
  padding: 1rem;
  background: #1e86ff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search button:hover {
  background: #83bdff;
}

.overview {
  padding: 1.2rem;
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  grid-auto-rows: 250px;
  column-gap: 1rem;
  row-gap: 1rem;
}

.overview__item {
  position: relative;
}

@media (min-width: 645px) {
  .overview {
    grid-template-columns: repeat(3, 1fr);
  }

  .overview__item:nth-child(4) {
    grid-column-start: span 2;
  }

  .overview__item:nth-child(5) {
    grid-row-start: span 2;
  }

  .overview__item:nth-child(9) {
    grid-column-start: span 2;
  }

  .overview__item:nth-child(12) {
    grid-row-start: span 2;
  }

  .overview__item:nth-child(13) {
    grid-column-start: span 2;
  }

  .overview__item:nth-child(15) {
    grid-row-start: span 2;
  }

  .overview__item:nth-child(20) {
    grid-column-start: span 2;
  }
}

.overview__item h2 {
  width: 100%;
  position: absolute;
  bottom: 0;
  color: #fff;
  font-size: 1.5rem;
  padding: 1rem;
  font-weight: 100;
  background: linear-gradient(to right bottom, #33468062, #1e87ff2d);
}

.overview__item img:hover {
  cursor: pointer;
  opacity: 0.7;
}

.footer {
  padding: 0.8rem;
}

.footer__content-box {
  text-align: center;
}

.footer-content-primary {
  font-size: 3rem;
  font-weight: 100;
  text-transform: uppercase;
  margin-bottom: 2rem;
}
